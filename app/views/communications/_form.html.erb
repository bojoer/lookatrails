<tr>
  <td class="label"><%= f.text_field :label, :readonly => !communication.editable, :hidden_read => true, :partial => 'PLAIN_FIELD', :class => 'communication_label' %></td>
  <td class="type"><%= f.enum_select :kind, :values => Communication.kinds, :value => communication.kind.to_s, :readonly => !communication.editable, :hidden_read => true, :partial => 'PLAIN_FIELD', :class => 'communication_type' %></td>
  <td class="value"><%= f.text_field :value, :partial => 'PLAIN_FIELD', :class => 'communication_value' %><%= f.hidden_field :rank %></td>
  <% if options[:show_actions] then %><td class="actions">ACT</td><% end %>
</tr>
<tr id="communication_<%= communication.rank %>_desc">
   <td colspan="<% if options[:show_actions] then %>4<%else%>3<%end%>" class="desc"><%= f.text_field :desc, :partial => 'PLAIN_FIELD', :class => 'communication_desc' %></td>
</tr>


 
