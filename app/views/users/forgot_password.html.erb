<% title "Password recovery" %>
  
  <%= display_flashes %>
  
  <% unless @user.nil? %>
    <% if @user.active? %>
  	  <p>An email containing further instructions has been dispatched to you at <em><%= @user.email %></em>.</p>
  	  <p>Please follow the instructions in the email to recover your account's password.</p> 
    <% else %>
  	  <p>Your account is currently not active. You cannot reset your password when your account is not active.</p>
  	  <p>Please contact <%= support_mail_link :encode => 'javascript', :subject => 'Forgot password' %></p>
    <% end %>
  <% else %>
    <p>Please enter the login or email address associated with your account. We will send you an email with further instructions shortly.</p>
  	<% form_tag user_forgot_password_url, :method => :put, :id => 'forgot_pw_form' do %>
  		<%= text_field_tag :email_or_login, '', :label => {:text => 'Your login or email address', :partial => true} %>
  		<p align="right"><%= submit_tag 'Recover my password &raquo;', :id => 'recover_pw_button' %></p>
  	<% end %>
  <% end %>
  
  <div class="links" style="text-align: left;">
  	<%= link_to("&laquo; Back", user_troubleshooting_path)%>
  </div>